<body onload="Driver()">

	<div id="sub_menu"></div>


	<div id="leftTable">
		<center>
			<br>
			<center>
				<canvas width="200px" height="200px" id="draw"></canvas>
				<div id="timerBox"><br><p id="DesktopTimer">4!</p></div>
