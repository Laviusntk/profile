							<option>5</option>
							<option>7</option>
							<option>9</option>
							<option>11</option>
							<option>13</option>
						</select>
						<button type="button" value="Submit Name" onclick="storeUserName()" style="color: white;background: green">Submit Name</button>
					</center>
				</a>
				<input type="text" id="newsearch" class="newsearch" name="userAnswer" value="0">
			</form>
		</div>
		<center><button id='next' onclick="nextChallenge()">NEXT</button><div id="mobileUserDetails"><div id="userDetails2" class="userDetails2"></div><br><button id="viewTutorial" value="View Tutorial" onclick="viewTutorial()">View Tutorial</button></div><center>

